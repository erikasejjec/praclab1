#include <iostream>

using namespace std;

bool esPalindromo(string cadena, int tam){
    for(int i = 0; i < tam/2; i++)
        if(cadena[i] != cadena[tam-i-1])
            return false;
    return true;
}

int main()
{
    string cadena;
    cout << "Ingresa la cadena: ";
    getline(cin,cadena);
    if (esPalindromo(cadena,cadena.length())==true)
         cout << "\nEs palindromo \n";
    else
        cout << "\nNo es palindromo \n";
}
